<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:id="@+id/main_canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:baselineAligned="false"
        android:orientation="horizontal" >
        
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="0dp" 
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/left_canvas">
        	
        	<View 
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1"
        	    android:layout_height="0dp"
        	    android:background="@color/blue"
        	    android:id="@+id/top_left_tile"/>
        	
        	<Space 
        	    android:layout_width="match_parent"
        	    android:layout_height="10dp"/>
        	
        	<View 
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1"
        	    android:layout_height="0dp"
        	    android:background="@color/yellow"
        	    android:id="@+id/bottom_left_tile"/>
        	    
        </LinearLayout>
        
        <Space 
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        
        <LinearLayout
            android:id="@+id/right_canvas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <View 
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1"
        	    android:layout_height="0dp"
        	    android:background="@color/red"
        	    android:id="@+id/top_right_tile"/>
            
            <Space 
        	    android:layout_width="match_parent"
        	    android:layout_height="10dp"/>
            
            <View 
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1"
        	    android:layout_height="0dp"
        	    android:background="@color/white"
        	    android:id="@+id/center_right_tile"/>
            
            <Space 
        	    android:layout_width="match_parent"
        	    android:layout_height="10dp"/>
            
            <View 
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1"
        	    android:layout_height="0dp"
        	    android:background="@color/blue"
        	    android:id="@+id/bottom_right_tile"/>
        </LinearLayout>
               
    </LinearLayout>
    
    <SeekBar 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:background="@color/black"
        android:paddingTop="3dp"
        android:max="100"
        android:id="@+id/sBar"/>

</LinearLayout>